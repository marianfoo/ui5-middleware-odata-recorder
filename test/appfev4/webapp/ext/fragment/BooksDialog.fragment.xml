<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="booksDialog"
        title="Available Books"
        contentWidth="800px"
        contentHeight="600px"
        resizable="true"
        draggable="true">
        <content>
            <Table
                id="booksTable"
                items="{
                    path: 'books>/Books',
                    parameters: {
                        $select: 'ID,title,author/name,genre,stock,price,currency/code',
                        $expand: 'author,currency'
                    }
                }"
                growing="true"
                growingThreshold="20">
                <columns>
                    <Column width="40%">
                        <Text text="Title" />
                    </Column>
                    <Column width="25%">
                        <Text text="Author" />
                    </Column>
                    <Column width="15%">
                        <Text text="Genre" />
                    </Column>
                    <Column width="10%" hAlign="End">
                        <Text text="Stock" />
                    </Column>
                    <Column width="10%" hAlign="End">
                        <Text text="Price" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{books>title}" />
                            <Text text="{books>author/name}" />
                            <Text text="{books>genre}" />
                            <ObjectNumber
                                number="{books>stock}"
                                state="{= ${books>stock} > 20 ? 'Success' : ${books>stock} > 10 ? 'Warning' : 'Error'}" />
                            <ObjectNumber
                                number="{
                                    parts: ['books>price', 'books>currency/code'],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: true
                                    }
                                }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
            <Button
                id="closeButton"
                text="Close" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
